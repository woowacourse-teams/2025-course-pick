{
  "agent": {
    "logfile": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/lib/coursepick/logs/coursepick*.log",
            "log_group_name": "/aws/ec2/coursepick-prod",
            "log_stream_name": "{instance_id}",
            "retention_in_days": 30
          }
        ]
      }
    }
  },
  "metrics": {
    "namespace": "EC2/coursepick/prod",
    "append_dimensions": {
      "InstanceId": "${aws:InstanceId}",
      "InstanceType": "${aws:InstanceType}",
      "AutoScalingGroupName": "${aws:AutoScalingGroupName}"
    },
    "aggregation_dimensions": [
      [
        "InstanceId"
      ]
    ],
    "metrics_collected": {
      "cpu": {
        "resources": [
          "*"
        ],
        "totalcpu": true,
        "measurement": [
          {
            "name": "cpu_usage_user",
            "unit": "Percent"
          },
          {
            "name": "cpu_usage_system",
            "unit": "Percent"
          },
          {
            "name": "cpu_usage_iowait",
            "unit": "Percent"
          },
          {
            "name": "cpu_usage_idle",
            "unit": "Percent"
          },
          {
            "name": "cpu_usage_active",
            "unit": "Percent"
          }
        ]
      },
      "mem": {
        "measurement": [
          {
            "name": "mem_used_percent",
            "unit": "Percent"
          },
          {
            "name": "mem_available",
            "unit": "Bytes"
          },
          {
            "name": "mem_free",
            "unit": "Bytes"
          }
        ]
      },
      "disk": {
        "resources": [
          "*"
        ],
        "measurement": [
          {
            "name": "used_percent",
            "unit": "Percent"
          }
        ],
        "ignore_file_system_types": [
          "sysfs",
          "devtmpfs",
          "overlay",
          "squashfs",
          "tmpfs",
          "proc",
          "cgroup2",
          "rpc_pipefs"
        ]
      },
      "diskio": {
        "resources": [
          "*"
        ],
        "measurement": [
          {
            "name": "io_time",
            "unit": "Milliseconds"
          },
          {
            "name": "read_bytes",
            "unit": "Bytes"
          },
          {
            "name": "write_bytes",
            "unit": "Bytes"
          },
          {
            "name": "reads",
            "unit": "Count"
          },
          {
            "name": "writes",
            "unit": "Count"
          }
        ]
      },
      "netstat": {
        "measurement": [
          {
            "name": "tcp_established",
            "unit": "Count"
          },
          {
            "name": "tcp_time_wait",
            "unit": "Count"
          }
        ]
      },
      "swap": {
        "measurement": [
          {
            "name": "swap_used_percent",
            "unit": "Percent"
          }
        ]
      }
    }
  }
}

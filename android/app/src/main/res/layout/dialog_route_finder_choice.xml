<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="state"
            type="io.coursepick.coursepick.presentation.routefinder.RouteFinderChoiceUiState" />

        <variable
            name="onChosenListener"
            type="io.coursepick.coursepick.presentation.routefinder.OnChosenListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/routeFinderChoiceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selected_route_finder_application_dialog_title"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/routeFinderChoiceDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/selected_route_finder_application_dialog_description"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/routeFinderChoiceTitle" />

        <ListView
            android:id="@+id/routeFinderChoiceItems"
            onItemClick="@{(parent, view, position, id) -> onChosenListener.onChosen(position)}"
            simpleListItems="@{state.routeFinderNameIds}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/routeFinderChoiceDescription"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_height="300dp"
            tools:listitem="@android:layout/simple_list_item_1" />

        <CheckBox
            android:id="@+id/routeFinderChoiceDefaultCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:checked="@={state.defaultAppChecked}"
            android:text="@string/selected_route_finder_application_dialog_set_default"
            app:layout_constraintTop_toBottomOf="@id/routeFinderChoiceItems" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
